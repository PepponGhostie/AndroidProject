<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SignUpActivity"
    android:id="@+id/layout_signup">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/NameBox"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordBox"
        android:layout_below="@+id/NameBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ConfirmPasswordBox"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/PasswordBox"
        android:layout_alignStart="@+id/EmailBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/EmailBox"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ConfirmPasswordBox"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:ems="10"
        android:id="@+id/PhoneNumberBox"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/EmailBox"
        android:layout_alignStart="@+id/EmailBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/NameView"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/NameBox"
        android:layout_toStartOf="@+id/NameBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/PasswordView"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/PasswordBox"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Confirm\nPassword:"
        android:id="@+id/ConfirmPasswordView"
        android:textAlignment="gravity"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/ConfirmPasswordBox"
        android:layout_toStartOf="@+id/ConfirmPasswordBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/EmailView"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/EmailBox"
        android:layout_alignEnd="@+id/PasswordView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone\nnumber: "
        android:id="@+id/PhoneNumberView"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/PhoneNumberBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/ConfirmButton"
        android:layout_below="@+id/PhoneNumberBox"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
